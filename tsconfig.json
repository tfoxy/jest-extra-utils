{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "outDir": "dist",
    "declaration": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"]
}
